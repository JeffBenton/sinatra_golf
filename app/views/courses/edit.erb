<div class="row">
  <form method="post" action="/courses/<%= @course.id %>/edit" class="col">
    <div class="form-group col col-md-6">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= @course.name %>">
    </div>
    <div class="form-group col col-md-8">
      <label for="username">Score Card</label>
      <table class="table">
        <th scope="col">Hole</th>
        <% (1..18).each do |num| %>
          <th scope="col"><%= num %></th>
        <% end %>
        <tr>
          <th scope="col">Par</th>
          <% @course.to_array.each do |hole| %>
            <td style="padding-left: 10px"><input onkeypress="return isNumberKey(event)" maxlength="2" style="width: 30px; padding-left: 7px;" type="text" name="score_card[]" value="<%= hole %>"></td>
          <% end %>
        </tr>
      </table>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
  </form>
</div>

<script>
    function isNumberKey(evt) {
        if (evt.which < 48 || evt.which > 57) {
            return false;
        }
        return true;
    }
</script>