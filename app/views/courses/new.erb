<div class="row">
  <form method="post" action="/courses/new" class="col">
    <div class="form-group col col-md-6">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Course/Club Name">
    </div>
    <div class="form-group col col-md-8">
      <label>Score Card</label>
      <table class="table">
        <th scope="col">Hole</th>
        <% (1..18).each do |num| %>
          <th scope="col"><%= num %></th>
        <% end %>
        <tr>
          <th scope="col">Par</th>
          <% (1..18).each do || %>
            <td style="padding-left: 10px"><input style="width: 30px; padding-left: 7px;" type="text" name="score_card[]"></td>
          <% end %>
        </tr>
      </table>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>
