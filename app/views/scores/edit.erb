<div class="row">
  <form method="post" action="/scores/<%= @score.id %>/edit" class="col">
    <input type="hidden" name="_method" value="PATCH">
    <div class="form-group col col-md-8">
      <label>Score Card</label>
      <table class="table">
        <th scope="col">Hole</th>
        <% (1..18).each do |num| %>
          <th scope="col"><%= num %></th>
        <% end %>
        <tr>
          <th scope="col">Par</th>
          <% @score.course.to_array.each do |hole| %>
            <td scope="col"><%= hole %></td>
          <% end %>
        </tr>
        <tr>
          <th scope="col">Score</th>
          <% @score.to_array.each do |score| %>
            <td style="padding-left: 10px"><input onkeypress="return isNumberKey(event)" maxlength="2" style="width: 30px; padding-left: 7px;" type="text" name="score_card[]" value="<%= score %>"></td>
          <% end %>
        </tr>
      </table>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>

<script>
    function isNumberKey(evt) {
        if (evt.which < 48 || evt.which > 57) {
            return false;
        }
        return true;
    }
</script>